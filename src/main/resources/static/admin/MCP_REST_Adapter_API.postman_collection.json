							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/mcp/tools?namePattern=",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "mcp", "tools"],
							"query": [
								{
									"key": "namePattern",
									"value": "",
									"description": "Optional pattern to filter tools by name"
