# MCP REST Adapter - Environment Variables Template
# 
# Copy this file to .env and update the values for your environment.
# These variables are used by Docker Compose and the Spring Boot application.
# 
# @author Neeraj Yadav
# @version 1.0.0
# @since 2025-12-16

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5434
DB_NAME=mcpwrapper
DB_USERNAME=mcpuser
DB_PASSWORD=mcppassword

# Database Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_MAX_LIFETIME=1800000

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DATABASE=0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Settings
MCP_SERVER_PORT=8080
MCP_LOG_LEVEL=INFO
MCP_PROFILE=dev

# Security Settings
MCP_AUTH_ENABLED=false
MCP_ENCRYPTION_KEY=change-me-in-production-use-32-chars
MCP_JWT_SECRET=your-jwt-secret-key-here

# Performance Settings
MCP_MAX_CONCURRENT_EXECUTIONS=100
MCP_DEFAULT_TIMEOUT=30s
MCP_MAX_REQUEST_SIZE=10MB

# =============================================================================
# EXTERNAL API CREDENTIALS
# =============================================================================

# Example API Keys (add your own as needed)
PETSTORE_API_KEY=your-petstore-api-key
GITHUB_API_TOKEN=your-github-token
SLACK_API_TOKEN=your-slack-token

# OAuth2 Credentials
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Metrics and Observability
MCP_METRICS_ENABLED=true
MCP_TRACING_ENABLED=true
MCP_TRACE_SAMPLING_PROBABILITY=0.1

# Prometheus Settings
PROMETHEUS_PORT=9090

# Grafana Settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafanapassword

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# pgAdmin Settings
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@mcpwrapper.com
PGADMIN_PASSWORD=adminpassword

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production Database (uncomment for production)
# DB_HOST=your-production-db-host
# DB_PASSWORD=your-secure-production-password

# Production Security (uncomment for production)
# MCP_AUTH_ENABLED=true
# MCP_ENCRYPTION_KEY=your-production-encryption-key-32-chars
# MCP_JWT_SECRET=your-production-jwt-secret

# Production Performance (uncomment for production)
# MCP_MAX_CONCURRENT_EXECUTIONS=500
# MCP_TRACE_SAMPLING_PROBABILITY=0.01
